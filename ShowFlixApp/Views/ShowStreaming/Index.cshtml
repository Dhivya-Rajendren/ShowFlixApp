@model IEnumerable<ShowFlixApp.Models.ShowStreaming>


    <p class="alert alert-warning display-4">Shows Streaming Now....</p>    


    <div class="card-group">

        @foreach (var item in Model)
       {
           <div class="card col-sm-4">
               <div class="card-header">
                   @item.Show.ShowName
                   </div>
                   <div class="card-body">
                       <img src=@item.Show.ShowImg />
                       </div>
           
               <div class="card-footer">
                   <a asp-action="StreamingDetail" asp-route-streamId=@item.StreamId class="btn btn-primary">View</a>
                                      <a href="#" class="btn btn-info">Edit</a>

                                                         <a asp-action="DeleteStreaming" asp-route-streamId=@item.StreamId class="btn btn-danger">Delete</a>

                   </div>
                   </div>


       }


    </div>

